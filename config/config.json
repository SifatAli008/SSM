{
    "name": "Smart Shop Manager",
    "version": "1.0.0",
    "debug": false,
    "logging": {
        "level": "INFO",
        "file": "logs/app.log",
        "max_size": 10485760,
        "backup_count": 5,
        "format": "<green>{time:YYYY-MM-DD HH:mm:ss.SSS}</green> | <level>{level: <8}</level> | <cyan>{name}</cyan>:<cyan>{function}</cyan>:<cyan>{line}</cyan> - <level>{message}</level>"
    },
    "database": {
        "type": "sqlite",
        "path": "data/database.db",
        "host": null,
        "port": null,
        "username": null,
        "password": null,
        "database": null
    },
    "security": {
        "min_password_length": 8,
        "jwt_secret": "your-secret-key",
        "jwt_algorithm": "HS256",
        "token_expire_minutes": 30,
        "salt_rounds": 12
    },
    "backup": {
        "enabled": true,
        "max_backups": 5,
        "backup_dir": "backups",
        "schedule": "0 0 * * *"
    }
}